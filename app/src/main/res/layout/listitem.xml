<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:background="@drawable/cell_shape">

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/v_o_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Organization"/>
        <TextView
            android:id="@+id/v_o_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#e92066"
            android:layout_margin="2dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="Name"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/v_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="City"/>
        <TextView
            android:id="@+id/v_city1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="#e92066"
            android:layout_margin="2dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:text="City"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/v_Desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Description"/>
        <TextView
            android:id="@+id/v_Desc1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Description value"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:visibility="gone"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/v_donCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:text="Donation Count"/>
        <TextView
            android:id="@+id/v_donCount1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Donation Count value"/>
    </LinearLayout>

</LinearLayout>